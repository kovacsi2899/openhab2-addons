<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="gmailparadoxparser"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="ParadoxSystem">
		<label>Paradox monitoring system status</label>
		<description>Paradox Partition status</description>

		<channels>
			<channel id="partition1" typeId="partitionId" />
			<channel id="partition2" typeId="partitionId" />
			<channel id="partition3" typeId="partitionId" />
			<channel id="partition4" typeId="partitionId" />
		</channels>

		<config-description>
			<parameter name="partitionId" type="text" required="true">
				<label>Partition Id</label>
				<description>This is the partition ID of the Paradox partition</description>
			</parameter>
			<parameter name="refresh" type="integer" min="1" max="600">
	            <label>Refresh interval</label>
	            <description>Specifies the refresh interval in seconds.</description>
	            <default>30</default>
	        </parameter>

		</config-description>

	</thing-type>

	<!-- Sample Channel Type -->
	<channel-type id="sample-channel">
		<item-type>Text</item-type>
		<label>Partition status</label>
		<description>Status of particular partition</description>
		<state readOnly="true" pattern="%s" />
	</channel-type>

</thing:thing-descriptions>
